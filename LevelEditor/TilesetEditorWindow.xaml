<Window x:Class="LevelEditor.TilesetEditorWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LevelEditor.Views"
      mc:Ignorable="d"
      Title="TilesetImageSource Editor" Width="832" Height="900">

    <Window.DataContext>
        <Binding Path="TilesetEditor" Source="{StaticResource Locator}" />
    </Window.DataContext>

    <Grid Margin="2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="CanvasElement" HorizontalAlignment="Left" Height="800" VerticalAlignment="Bottom" Width="800" Margin="10,0,0,10">
        </Canvas>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="34" Width="800" Margin="0,10,11,0" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,1,1,1" Width="798">
                <Button Content="Open File" Width="190" Command="{Binding BrowseCommand}" Height="30"/>
                <Label Content="Slice mode" Margin="20,0,0,0"/>
                <ComboBox HorizontalAlignment="Center" Width="190" Height="20" SelectedIndex="{Binding Path=SelectedSliceMode}" ItemsSource="{Binding Path=SliceModeChoices}"/>
                <Label Content="Size" Margin="20,0,0,0"/>
                <Slider Minimum="4" SmallChange="1" Width="150" VerticalAlignment="Center" Value="{Binding Path=SizeExp}" Maximum="8"/>
                <TextBox Height="22" TextWrapping="Wrap" Text="{Binding Path=Dimension}" Width="52"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
